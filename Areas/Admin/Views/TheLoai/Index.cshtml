@{

}

<div class="container">
    <table class="table">
        <thread>
            <tr>
                <th>Tên Thể Loại</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
            </tr>
        </thread>
        @foreach (var item in @ViewBag.TheLoai)
        {
            <tbody>
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="70%">@String.Format("{0:dd/MM/yyyy}",item.DateCreated)</td>
                    <td width="40%">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                    </td>
                </tr>
            </tbody>
        }
    </table>
    <a asp-controller="TheLoai" asp-action="Create" class="btn btn-primary">Thêm Mới</a>
</div>